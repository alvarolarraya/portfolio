---
export interface Props {
	title: string;
	body: string;
	href: string;
	image_path: string;
	transition_image: string;
	transition_title:string;
}

const { href, title, body, image_path, transition_image, transition_title } = Astro.props;

var transition = "view-transition-name:"+transition_image
var title_transition = "view-transition-name:"+transition_title
---

<li class="link-card">
	<a href={href}>
		<h2 style={title_transition}>
			{title}
		</h2>
		<p>
			{body}
		</p><br>
		<img src={image_path} alt="" style={transition}>
	</a>
</li>
<style>
	.link-card img {
		width:100%;
		border-radius: 0.6rem;
	}
	.link-card {
		text-align: center;
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: rgb(0, 0, 0);
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #ffffff;
		background-color: rgb(20, 20, 20);
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #868686;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card:is(:hover, :focus-within) p {
		color:white;
	}
</style>
