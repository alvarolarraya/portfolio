---
import MenuItem from '../components/MenuItem.astro';
---
<label>
<input type="checkbox">
<span class="menu"> <span class="hamburger"></span> </span>
<ul >
  <MenuItem
    href="/"
    title="Home"
  />

  <MenuItem
    href="/projects/"
    title="Projects"
  />

  <MenuItem
    href="/about/"
    title="About me"
  />
</ul>
</label>

<style>
*{
  width: 0;
  padding:0;
  margin:0;
  z-index: 500;
}

.menu {
  position: absolute;
  right: -100px;
  top: -100px;
  z-index: 1000;
  width: 200px;
  height: 200px;
  background: rgb(var(--accent));
  border-radius: 50% 50% 50% 50%;
  -webkit-transition: .2s ease-in-out;
  transition: .2s ease-in-out;
  box-shadow: 0 0 0 0 rgb(var(--accent)), 0 0 0 0;
  cursor: pointer;
  
}

.menu:hover {
  width: 210px;
  height: 210px;
  background: white;
}

.hamburger {
  position: absolute;
  top: 135px;
  left: 50px;
  width: 30px;
  height: 2px;
  background: black;
  display: block;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transition: .2s ease-in-out;
  transition: .2s ease-in-out;
}

.hamburger:after, .hamburger:before {
  -webkit-transition: .2s ease-in-out;
  transition: .2s ease-in-out;
  content: "";
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  background: black;
}

.hamburger:before { top: -10px; }

.hamburger:after { bottom: -10px; }

input { display: none; }

input:checked + .menu {
  box-shadow: 0 0 0 100vw #1a1a1a, 0 0 0 100vh;
}

input:checked + .menu .hamburger {
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  
}

input:checked + .menu .hamburger:after {
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
  bottom: 0;
  
}

input:checked + .menu .hamburger:before {
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
  top: 0;
  
}

input:checked + .menu + * { 
  opacity: 1;
  z-index: 960;
  width:100%;
 }

 input:checked + .menu + ul { 
  width: 100%-150px;
  height: 100vh;
  display: grid;
  grid-template rows: repeat(3, 100vh);
  z-index: 1100;
  top:0;
  right:150px;
 }

ul {
  position: absolute;
  /* bottom:0; */
  right:0;
  top:0;
  /* left:0; */
  list-style-type: none;
  z-index: 1100;
  opacity: 0;
  -webkit-transition: .25s 0s ease-in-out;
  transition: .25s 0s ease-in-out;
}
</style>