---
import MenuItem from '../components/MenuItem.astro';
---
<label>
<input type="checkbox">
<span class="menu"> <span class="hamburger"></span> </span>
<ul >
  <MenuItem
    href="/"
    title="Home"
    emoji="🏠"
  />

  <MenuItem
    href="/projects/"
    title="Projects"
    emoji="👨🏻‍💻"
  />

  <MenuItem
    href="/about/"
    title="About me"
    emoji="🙋🏻‍♂️"
  />
</ul>
</label>

<style>
*{
  width: 0;
  padding:0;
  margin:0;
  z-index: 500;
}

.menu {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1101;
  width: 6vw;
  height: 6vw;
  background: rgb(var(--accent));
  border-radius: 0% 0% 0% 50%;
  -webkit-transition: .2s ease-in-out;
  transition: .2s ease-in-out;
  box-shadow: 0 0 0 0 rgb(var(--accent)), 0 0 0 0;
  cursor: pointer;
  
}

.hamburger {
  position: absolute;
  top: 3vw;
  left: 2vw;
  width: 2vw;
  height: 4px;
  background: black;
  display: block;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transition: .2s ease-in-out;
  transition: .2s ease-in-out;
}

.hamburger:after, .hamburger:before {
  -webkit-transition: .2s ease-in-out;
  transition: .2s ease-in-out;
  content: "";
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  background: black;
}

.hamburger:before { top: -0.7vw; }

.hamburger:after { bottom: -0.7vw; }

input { display: none; }

/* input:checked + .menu {
  box-shadow: 0 0 0 100vw #1a1a1a, 0 0 0 100vh;
} */

input:checked + .menu .hamburger {
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  
}

input:checked + .menu .hamburger:after {
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
  bottom: 0;
  
}

input:checked + .menu .hamburger:before {
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
  top: 0;
  
}

input:checked + .menu + * { 
  opacity: 1;
  z-index: 960;
  width:100%;
 }

 input:checked + .menu + ul { 
  width: 100%-150px;
  height: 100vh;
  display: grid;
  grid-template-rows: repeat(3, 100vh);
  z-index: 1100;
  top:0;
  /* right:150px; */
 }

ul {
  position: fixed;
  right:0;
  top:0;
  list-style-type: none;
  z-index: 1100;
  opacity: 0;
  -webkit-transition: .5s 0s ease-in-out;
  transition: .5s 0s ease-in-out;
}
@media only screen and (max-width: 1200px){
    /*Tablets*/
    .menu {
        width: 13vw;
        height: 13vw;
    }
    .hamburger {
        top: 5vw;
        left: 4vw;
        width: 4vw;
        height: 4px;
    }
    .hamburger:before { top: -1.5vw; }
    .hamburger:after { bottom: -1.5vw; }
}
@media only screen and (max-width: 600px){
    /* Big smartphones */
    .menu {
        width: 20vw;
        height: 20vw;
    }
    .hamburger {
        top: 10vw;
        left: 8vw;
        width: 6vw;
        height: 4px;
    }
    .hamburger:before { top: -2vw; }
    .hamburger:after { bottom: -2vw; }
}
@media only screen and (min-width: 1200px){
  .menu:hover {
    width: 6.5vw;
    height: 6.5vw;
    background: white;
  }
}
@media only screen and (max-width: 425px){
	/*Small smartphones*/
    .menu {
        width: 22vw;
        height: 22vw;
    }
    .hamburger {
        top: 10vw;
        left: 8vw;
        width: 6vw;
        height: 2px;
    }
    .hamburger:before { top: -2vw; }
    .hamburger:after { bottom: -2vw; }
}



</style>