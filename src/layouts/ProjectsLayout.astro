      </svg>
    </a> 
  </div>
  <div id="content">
    <slot />
  </div>
</body>

</html>


<style>
  *{
		-webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
	}
  html{
    background-color:#1a1a1a;
    color:white;
    font-family: system-ui, sans-serif;
  }
  h1 {
		font-size: 4vw;
		font-weight: 800;
		margin: 0;
		padding:2vw;
		display: grid;
  		place-items: center;
		  background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 110%;
		background-position: 0%;
		text-transform: uppercase;
		cursor: default;
	}
  :root {
		--accent: 255, 80, 80;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #990000 30%, white 60%);
	}
  #title{
    border-bottom-style: solid;
    border-bottom-color: transparent;
    border-image: linear-gradient(to right, #990000, white) 1;
    margin-bottom:2%;
    margin-top:6vw;
  }
  section{
    margin-top:3%;
  }
  img,svg{
    /* position: absolute; */
    display: inline-block;
  }
  #projectImage{
    display:block;
    width:99%;
    top:0;
    aspect-ratio: 16/9;
    background-color: aliceblue;
    border-radius: 0.6rem;
  }
  #githubIcon{
    position: absolute;
    display: none;
    left: 50%;
    top:0;
    transform: translate(-50%,10%);
    fill:white;
    width: 50%;
  }
  #githubLink{
    position:relative;
    display: inline-block;
    /* display: block; */
    margin: 0 auto;
    width: 70%;
    display: flex;
    justify-content: center;
  }
  #githubLink:hover #projectImage{
    opacity: 0.5;
    width:100%;
  }
  #githubLink:hover #githubIcon{
    display: block;
  }
  #divPhoto{
    position: relative;
    width: 100%;
    /* height: 100vh; */
  }
  #content{
    margin-bottom:50vh;
  }
  @media only screen and (max-width: 1200px){
    h1{
      padding-left: 4vw;
    }
    #title{
      margin-top:20vw;
    }
	}
  @media only screen and (max-width: 600px){
		h1{
      padding-left: 6vw;
    }
    #title{
      margin-top:25vw;
    }
	}
  @media only screen and (max-width: 450px){
		h1{
      padding-left: 6vw;
    }
    #title{
      margin-top:30vw;
    }
	}
</style>

<script>
	window.navigation.addEventListener('navigate', (event:any)=>{
		const toUrl = new URL(event.destination.url)
		if((location.origin != toUrl.origin)||(toUrl.href.indexOf('#cards') > -1)||(toUrl.href.indexOf('projects') == -1)) return
		event.intercept({
			async handler (){
				const response = await fetch(toUrl.pathname)
				const text = await response.text()
				document.startViewTransition(()=>{
					document.body.innerHTML = text;
					if(toUrl.href.indexOf('#')==-1){
						document.documentElement.scrollTop = 0;
					}else{
            document.getElementById(toUrl.href.substring(toUrl.href.indexOf('#')+1)).scrollIntoView();
            window.scroll(0, document.documentElement.scrollTop-80);
          }
				})
			}
		})
	})
</script>